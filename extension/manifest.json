{
    "name": "carbon-price-tag",
    "version": "1.0",
    "manifest_version": 2,
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js":  ["js/content.js"]
        }
    ],
    "browser_action": {
        "default_icon": {
            "16": "img/icon16.png",
            "48": "img/icon48.png",
            "128": "img/icon128.png"
        },
        "default_popup": "popup.html", 
        "default_title": "Carbon Price Tag"
    }
}